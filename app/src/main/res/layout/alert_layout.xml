<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="280dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/alert_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AlertTitle"
                style="@style/BrowseTextStyle"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp" />

            <TextView
                android:id="@+id/alert_context"
                style="@style/NormalTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alert_title"
                android:layout_margin="12dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="12dp"
                android:text="There was a problem loading your info because you selected the wrong info." />

            <Button
                android:id="@+id/alert_button"
                android:layout_width="80dp"
                android:layout_height="50dp"
                style="@style/AppButtonStyle"
                app:backgroundTint="@null"
                android:text="@string/AlertOKButton"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:onClick="AlertOk" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>